<!DOCTYPE html>
<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" type="text/css" href="/styles/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <script src="/public/scripts/script.js"></script>
  <title>Movie Search</title>
</head>
<body class="container mt-4">
  <div class="header">
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-3">
      <button class="btn btn-primary" onclick="location.href='/favorites';">Show All Favorites</button>
      <h1 class="mb-0 navbar-brand mx-auto">Movie Search</h1>
      <form action="/search" method="post" class="form-inline">
        <div class="input-group">
          <input type="text" id="searchQuery" name="searchQuery" class="form-control" placeholder="Search Movies/TV Shows" required>
          <button type="submit" class="fas fa-search btn btn-search"></button>
        </div>
      </form>
    </nav>
  </div>

  </body>
  

  <div class="row" id="movieList">
    <% movies.forEach((movie) => { %>
      <div class="col-sm-6 col-md-4">
        <div class="card mb-4">
          <img src="<%= movie.Poster %>" alt="<%= movie.Title %> Poster" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= movie.Title %></h5>
            <p class="card-text"><strong>Year:</strong> <%= movie.Year %></p>
            <p class="card-text"><strong>Type:</strong> <%= movie.Type %></p>
            <form action="/favorite" method="post">
              <input type="hidden" name="title" value="<%= movie.Title %>">
              <input type="hidden" name="year" value="<%= movie.Year %>">
              <input type="hidden" name="type" value="<%= movie.Type %>">
              <input type="hidden" name="poster" value="<%= movie.Poster %>">
              <button type="submit" class="btn btn-success">Favorite</button>
            </form>
          </div>
        </div>
      </div>
    <% }); %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
